<%= form_for(@auction) do |f| %>
<% if @auction.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@auction.errors.count, "error") %> prohibited this auction from being saved:</h2>
  <ul>
    <% @auction.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  </ul>
  <% end %>
</div>
<% end %>

<!-- content begins -->
<div class="col-sm-10">
  <div id="mySystem">
    <div class="form-group">
      <label for="inputName" class="col-sm-4 control-label">Name of Item</label>
      <div class="col-sm-6">                               
        <%= f.text_field :auction_name, :class => "form-control", id: "inputName", placeholder: "Name" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputIntroduction" class="col-sm-4 control-label">Dscription of Item</label>
      <div class="col-sm-6">
        <%= f.text_area :auction_description, columns: 20, id: "inputIntroduction", placeholder: "Description of Item" %>
      </div>
    </div>
    <div class="form-group">
      <label for="itempic" class="col-sm-4">Image of item</label>
      <div class="col-sm-6">
        <%= image_tag(@auction.image_url) if @auction.image? %>
        <%= f.file_field :image, id: "picture" %>
      </div>
    </div>
    <hr>
      <div class="actions">
          <%= f.submit %>
  </div>
</div>
<% end %>
