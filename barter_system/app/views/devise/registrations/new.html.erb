<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<h3>Please Sign Up</h3>
		<hr>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-6">
				<div class="form-group">
                    <%= f.text_field :first_name, autofocus: true, id: "first_name", :class => "form-control input-lg", placeholder: "First Name", tabindex: "1" %>
				</div>
			</div>
			<div class="col-xs-6 col-sm-6 col-md-6">
				<div class="form-group">
					<%= f.text_field :last_name, id: "last_name", :class => "form-control input-lg", placeholder: "Last Name", tabindex: "2" %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<%= f.text_field :display_name, id: "display_name", :class => "form-control input-lg", placeholder: "Display Name", tabindex: "3" %>
		</div>
		<div class="form-group">
			<%= f.email_field :email, id: "email", :class => "form-control input-lg", :placeholder => "Email Address", :tabindex => "4" %>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-6">
				<div class="form-group">
					<%= f.password_field :password, autocomplete: "off", id: "password", :class => "form-control input-lg", placeholder: "Password", tabindex: "6" %>
				</div>
			</div>
			<div class="col-xs-6 col-sm-6 col-md-6">
				<div class="form-group">
					<%= f.password_field :password_confirmation, autocomplete: "off", id: "password_confirmation", :class => "form-control input-lg", placeholder: "Confirm Password", tabindex: "7" %>
				</div>
			</div>
		</div>
        <br>
        <hr>
		<div class="row">
			<p>You agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.</p>
		</div>
		
		<hr>
		<div class="row">
			<div class="col-xs-6 col-md-6 col-sm-offset-3"><%= f.submit "Sign up", :class => "btn btn-primary btn-block btn-lg", tabindex: "8" %></div>
		</div>
	</div>
</div>
<% end %>
<!-- Modal -->
<div class="modal fade" id="t_and_c_m" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title" id="myModalLabel">Terms & Conditions</h4>
			</div>
			<div class="modal-body">
				<p>Please read this.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">I Agree</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
