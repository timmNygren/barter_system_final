<%= render partial: 'shared/sidebar' %>
<!-- content begins -->
<div class="col-sm-10">
    <div id="mySystem">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list"></span> Auctioning Items
            </div>
            <!-- Table -->
            <table class="table table-hover" id="bidding-table">
                <thead>
                    <th>Auctioning Items</th>
                    <th>Seller</th>
                    <th></th>
                </thead>
                <tbody>
                    <% @auctions.each do |auction| %>
                    <tr>
                        <td>
                            <div class="media">
                                <a href="#" class="pull-left">
                                    <%= image_tag(auction.image_url , class: "media-object") %>
                                </a>
                                <div class="media-body">
                                    <h5 class="media-heading"><a href=""><%= auction.auction_name %></a></h5>
                                    <p><%= auction.auction_description %></p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <%= auction.user.display_name %>
                        </td>
                        <td>
                            <%= link_to 'Bid', create_swap_path(auction.id), {:class => "btn btn-warning btn-xs"} %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div><!-- content ends -->